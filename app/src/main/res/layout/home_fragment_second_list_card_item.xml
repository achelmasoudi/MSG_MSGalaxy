<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="163dp"
    android:layout_height="210dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:background="@color/color_ofBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/homeFragment_secondList_carditem_showButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/homeFragment_secondList_carditem_pictureId"
            android:layout_width="140dp"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/homeFragment_secondList_carditem_rankId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/homeFragment_secondList_carditem_loadingLottie"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_colorFilter="@color/gray"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_loading_animation"
        app:lottie_speed="1.5" />

</RelativeLayout>