<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_ofBackground">

    <RelativeLayout
        android:id="@+id/homeFragment_thirdList_carditem_relativeLayoutId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/homeFragment_thirdList_carditem_showButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/homeFragment_thirdList_carditem_directorPictureId"
                android:layout_width="170dp"
                android:layout_height="261dp"
                android:scaleType="centerCrop"
                android:src="@drawable/oppenheimer" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/homeFragment_thirdList_carditem_loadingLottie"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/gray"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_loading_animation"
                app:lottie_speed="1.5" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_alignLeft="@+id/homeFragment_thirdList_carditem_showButtonId"
            android:layout_alignRight="@+id/homeFragment_thirdList_carditem_showButtonId"
            android:layout_alignBottom="@+id/homeFragment_thirdList_carditem_showButtonId"
            app:cardBackgroundColor="#A9000000"
            app:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/homeFragment_thirdList_textView_nameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="Christopher Nolar"
                android:textColor="#BEBEBE"
                android:textSize="13dp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>