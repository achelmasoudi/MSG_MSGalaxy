<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:background="@color/color_ofBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp">

        <ImageView
            android:id="@+id/homeFragment_topMSG_carditem_pictureId"
            style="@style/SelectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:paddingTop="90dp"
            android:src="@drawable/oppenheimer"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_effects" />

    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/aboutMovieOrSerieActivity_relativeLayoutId_forPosterOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="#00FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/homeFragment_topMSG_carditem_posterPic_imageViewId2"
                    android:layout_width="148dp"
                    android:layout_height="213dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/oppenheimer" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/homeFragment_topMSG_carditem_loadingLottie"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_colorFilter="@color/gray"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/lottie_loading_animation"
                    app:lottie_speed="1.5" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/homeFragment_topMSG_carditem_nameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/homeFragment_topMSG_carditem_linearLayoutId"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/righteous"
            android:textStyle="bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Fight Club"
            android:textColor="#FFFFFF"
            android:textSize="23dp" />

        <LinearLayout
            android:id="@+id/homeFragment_topMSG_carditem_linearLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeFragment_topMSG_carditem_typeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="Movie"
                android:textColor="#BEBEBE"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/topmsg_card_item_circle_icon" />

            <TextView
                android:id="@+id/homeFragment_topMSG_carditem_yearId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/aldrich"
                android:gravity="center"
                android:text="1999"
                android:textColor="#BEBEBE"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/topmsg_card_item_circle_icon" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/imdb_icon" />

            <TextView
                android:id="@+id/homeFragment_topMSG_carditem_imdbRatingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/aldrich"
                android:text="9.3"
                android:textColor="#BEBEBE"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>