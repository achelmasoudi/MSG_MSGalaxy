<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/color_ofBackground"
android:layout_height="match_parent">

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/tablayoutTopRatedSeriesFragment_recyclerViewId"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:visibility="gone"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/tablayoutTopRatedSeriesFragment_shimmerFrameLayout"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/toprated_fragment_shimmer_item"/>
        <include
            layout="@layout/toprated_fragment_shimmer_item"/>
        <include
            layout="@layout/toprated_fragment_shimmer_item"/>
        <include
            layout="@layout/toprated_fragment_shimmer_item"/>
        <include
            layout="@layout/toprated_fragment_shimmer_item"/>
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>