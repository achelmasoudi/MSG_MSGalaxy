<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/color_ofBackground">

    <LinearLayout
        android:id="@+id/firesDislikesCardItem_linearLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_width="60dp"
            android:layout_height="50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/firesDislikesCardItem_profilePicId"
                android:layout_width="50dp"
                android:src="@drawable/interstellar"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/firesDislikesCardItem_firesOrDislikesIconId"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/selected_dislike_icon" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/firesDislikesCardItem_loadingLottie"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:visibility="visible"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/white"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_loading_animation"
                app:lottie_speed="1.5" />
        </RelativeLayout>

        <TextView
            android:id="@+id/firesDislikesCardItem_usernameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="50dp"
            android:text="Achraf"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>